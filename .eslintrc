
{
    "extends": "@enspire/enspire",
    "rules": {
        "no-throw-literal": "off",
        "camelcase": "off",
        "max-len": "off",
        "no-case-declarations": "off",
        "require-jsdoc": ["error", {
            "require": {
                "FunctionDeclaration": true,
                "MethodDefinition": true,
                "ClassDeclaration": true,
                "ArrowFunctionExpression": true,
                "FunctionExpression": true
            }
        }],
        "valid-jsdoc": "error"
    }
}