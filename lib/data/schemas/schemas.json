{
    "$id": "schemas",
    "$root": true,
    "type": "object",
    "dynamicDefaults": {
        "id": "uuid",
        "ts_created": "datetime"
    },
    "allOf": [
        {
            "$ref": "core"
        },
        {
            "properties": {
                "version": {
                    "type": "string",
                    "maxLength": 11
                },
                "name": {
                    "type": "string",
                    "maxLength": 30,
                    "minLength": 1
                },
                "hash": {
                    "type": "string",
                    "maxLength": 64
                },
                "ts_started": {
                    "format": "date-time",
                    "nullable": true,
                    "readOnly": true
                },
                "ts_completed": {
                    "format": "date-time",
                    "nullable": true,
                    "readOnly": true
                }
            }
        }
    ],
    "required": [
        "name",
        "version",
        "hash"
    ]
}