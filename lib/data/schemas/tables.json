{
    "$id": "tables",
    "$root": true,
    "type": "object",
    "dynamicDefaults": {
        "id": "uuid",
        "ts_created": "datetime"
    },
    "properties": {
        "id": {
            "type": "string",
            "format": "uuid",
            "definableOnCreate": true,
            "readOnly": true,
            "unique": true,
            "primaryKey": true
        },
        "sid": {
            "type": "integer",
            "serial": true,
            "readOnly": true
        },
        "version": {
            "type": "string",
            "maxLength": 11
        },
        "schema_name": {
            "type": "string",
            "maxLength": 30,
            "minLength": 1
        },
        "name": {
            "type": "string",
            "maxLength": 30,
            "minLength": 1
        },
        "schema": {
            "type": "object"
        },
        "hash": {
            "type": "string",
            "maxLength": 64
        },
        "ts_created": {
            "format": "date-time",
            "database": {
                "default": "now()"
            },
            "readOnly": true
        },
        "ts_updated": {
            "format": "date-time",
            "timestamp": true,
            "readOnly": true,
            "database": {
                "default": "now()"
            }
        }
    }
}